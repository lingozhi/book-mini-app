.collection-view {
  height: 100%;
  padding: 20rpx;
  overflow-y: auto;
}

.collection-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.book-item {
  width: 30%;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-cover-container {
  position: relative;
  width: 180rpx;
  height: 240rpx;
  border-radius: 8rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.book-cover {
  width: 100%;
  height: 100%;
}

.content-type-badge {
  position: absolute;
  top: 0;
  right: 0;
  background-color: rgba(0, 0, 0, 0.6);
  color: white;
  font-size: 20rpx;
  padding: 4rpx 10rpx;
  border-bottom-left-radius: 8rpx;
}

.book-title {
  margin-top: 10rpx;
  font-size: 26rpx;
  width: 180rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

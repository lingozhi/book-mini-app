.reader-container {
  height: 100vh;
  background: #fff;
  position: relative;
  padding-bottom: 100rpx; /* 为迷你播放器留出空间 */
}

.content {
  height: 100%;
  padding: 32rpx;
}

.content.night {
  background: #222;
  color: #bbb;
}

.chapter-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}

.chapter-content {
  font-size: 32rpx;
  line-height: 1.8;
  text-align: justify;
}

.controls {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s;
}

.controls.show {
  opacity: 1;
  pointer-events: auto;
}

.top-bar {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 88rpx;
  background: #fff;
  display: flex;
  align-items: center;
  padding: 0 32rpx;
}

.back image,
.menu image {
  width: 44rpx;
  height: 44rpx;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #333;
}

.bottom-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
}

.progress {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.current,
.total {
  font-size: 24rpx;
  color: #666;
  width: 120rpx;
}

.total {
  text-align: right;
}

slider {
  flex: 1;
  margin: 0 20rpx;
}

.actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.action-item {
  font-size: 28rpx;
  color: #666;
  padding: 16rpx 24rpx;
}

.action-item image {
  width: 40rpx;
  height: 40rpx;
}

.font-panel {
  position: fixed;
  left: 0;
  right: 0;
  bottom: -200rpx;
  background: #fff;
  padding: 32rpx;
  transition: transform 0.3s;
  transform: translateY(0);
}

.font-panel.show {
  transform: translateY(-200rpx);
}

.font-size-control {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 60rpx;
}

.size-btn {
  width: 80rpx;
  height: 80rpx;
  border: 2rpx solid #ff6b81;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ff6b81;
}

.size-btn.disabled {
  border-color: #ddd;
  color: #ddd;
}

.size-preview {
  font-size: 32rpx;
  color: #333;
}

.catalog-panel {
  position: fixed;
  top: 0;
  bottom: 0;
  right: -80%;
  width: 80%;
  background: #fff;
  transition: transform 0.3s;
  transform: translateX(0);
  display: flex;
  flex-direction: column;
}

.catalog-panel.show {
  transform: translateX(-100%);
}

.catalog-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.catalog-title {
  font-size: 32rpx;
  font-weight: bold;
}

.catalog-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.catalog-content {
  flex: 1;
  overflow-y: auto;
}

.catalog-item {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.catalog-item.active {
  color: #ff6b81;
  background: #fff5f6;
}

.audio-player {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.vinyl-record {
  width: 500rpx;
  height: 500rpx;
  margin-bottom: 60rpx;
}

.vinyl-record.playing {
  animation: rotate 3s linear infinite;
}

.record-image {
  width: 100%;
  height: 100%;
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #ff6b81;
  display: flex;
  align-items: center;
  justify-content: center;
}

.play-btn image {
  width: 60rpx;
  height: 60rpx;
}

.video-player {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #000;
}

.video {
  width: 100%;
  height: 422rpx; /* 16:9 比例 */
  margin-top: 50%;
  transform: translateY(-50%);
}

.collection-view {
  height: 100%;
  padding: 32rpx;
  overflow-y: auto;
}

.collection-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 32rpx;
  padding-bottom: env(safe-area-inset-bottom);
}

.book-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.book-cover {
  width: 200rpx;
  height: 280rpx;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.book-title {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
}

/* Add new styles for the book header, tabs, and content list */
.book-header {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.book-info {
  display: flex;
  align-items: center;
}

.book-cover {
  width: 160rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.book-details {
  flex: 1;
}

.book-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.book-meta {
  display: flex;
  flex-wrap: wrap;
}

.book-meta text {
  font-size: 24rpx;
  color: #666;
  background-color: #eeeeee;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
  margin-bottom: 8rpx;
}

.content-tabs {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}

.tab {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab.active {
  color: #ff6b81;
  font-weight: bold;
}

.tab.active:after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40%;
  height: 4rpx;
  background-color: #ff6b81;
}

.list-scroll-view {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
}

.content-list-container {
  background: #fff;
  position: relative;
  height: calc(100vh - 300rpx);
  overflow: hidden;
}

.content-list {
  height: 100%;
  width: 100%;
  position: relative;
}

.content-list.show {
  display: block;
}

.content-list.hide {
  display: none !important;
}

.content-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.item-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.item-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
}

.item-stats {
  display: flex;
  align-items: center;
}

.play-count {
  font-size: 24rpx;
  color: #999;
}

.duration {
  font-size: 24rpx;
  color: #666;
  margin-right: 16rpx;
  background-color: #f0f0f0;
  padding: 4rpx 8rpx;
  border-radius: 10rpx;
}

.empty-list {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  color: #999;
  font-size: 28rpx;
  z-index: 1;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 200rpx;
  width: 100%;
}

.loading-indicator {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff6b81;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #999;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

.debug-info {
  position: absolute;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  color: white;
  font-size: 24rpx;
  padding: 4rpx 8rpx;
  z-index: 999;
  display: none;
}

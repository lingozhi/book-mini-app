.play-container {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

/* 内容区容器 */
.content-area {
  flex: 1;
}

/* 音频播放器样式 */
.audio-player {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 32rpx;
}

.vinyl-container {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 60rpx;
}

.vinyl-record {
  width: 500rpx;
  height: 500rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.vinyl-record.playing {
  animation: rotate 3s linear infinite;
}

.record-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.player-controls {
  width: 100%;
  padding: 20rpx 0;
}

.progress-bar-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.time-label {
  font-size: 24rpx;
  color: #666;
  width: 80rpx;
}

.progress-slider {
  flex: 1;
  margin: 0 16rpx;
}

.control-buttons {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
}

.control-btn {
  width: 88rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mode-btn,
.list-btn {
  width: 60rpx;
  height: 60rpx;
}

.mode-icon,
.list-icon {
  font-size: 36rpx;
  color: #666;
}

.play-btn {
  width: 120rpx;
  height: 120rpx;
}

.control-icon {
  width: 50rpx;
  height: 50rpx;
}

.play-btn .control-icon {
  width: 100rpx;
  height: 100rpx;
}

/* 视频播放器样式 */
.video-player {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #000;
}

.video {
  width: 100%;
  height: 422rpx; /* 16:9 比例 */
}

/* 播放列表样式 */
.playlist-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70vh;
  background: #fff;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  transform: translateY(100%);
  transition: transform 0.3s ease;
  z-index: 100;
}

.playlist-panel.show {
  transform: translateY(0);
}

.playlist-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.playlist-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.playlist-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.playlist-content {
  height: calc(70vh - 91rpx);
}

.playlist-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.playlist-item.active {
  background: #fff5f6;
}

.playlist-item.active .playlist-item-title {
  color: #ff6b81;
  font-weight: bold;
}

.playlist-item-title {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.playlist-item-duration {
  font-size: 24rpx;
  color: #999;
  margin-left: 16rpx;
}

.control-text-icon {
  font-size: 36rpx;
  color: #666;
}

.play-text-icon {
  font-size: 40rpx;
  color: white;
}

.playlist-empty {
  padding: 60rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

.container {
  height: 100vh;
  background: #000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.camera {
  width: 100%;
  height: 100%;
  position: relative;
}

.scan-area {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 500rpx;
  height: 500rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.corner {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-color: #ff6b81;
  border-style: solid;
  border-width: 8rpx;
}

.top-left {
  left: -8rpx;
  top: -8rpx;
  border-right: none;
  border-bottom: none;
}

.top-right {
  right: -8rpx;
  top: -8rpx;
  border-left: none;
  border-bottom: none;
}

.bottom-left {
  left: -8rpx;
  bottom: -8rpx;
  border-right: none;
  border-top: none;
}

.bottom-right {
  right: -8rpx;
  bottom: -8rpx;
  border-left: none;
  border-top: none;
}

.scan-hint {
  position: absolute;
  left: 50%;
  bottom: 200rpx;
  transform: translateX(-50%);
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  width: 100%;
}
